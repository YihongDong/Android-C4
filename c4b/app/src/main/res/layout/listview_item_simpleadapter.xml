<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/apk_image"
        android:layout_width="75sp"
        android:layout_height="55sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="left"
        android:text="AppliactionsProvider.apk"
        app:layout_constraintStart_toEndOf="@+id/apk_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-06-30  21:06"
        app:layout_constraintStart_toEndOf="@+id/apk_image"
        app:layout_constraintTop_toBottomOf="@+id/apk_name" />

    <TextView
        android:id="@+id/apk_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="41097"
        app:layout_constraintStart_toEndOf="@+id/apk_time"
        app:layout_constraintTop_toBottomOf="@+id/apk_name" />

    <CheckBox
        android:id="@+id/ck_select"
        style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>